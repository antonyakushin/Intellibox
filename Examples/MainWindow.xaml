<Window
    x:Class="Examples.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Examples"
    xmlns:auto="clr-namespace:System.Windows.Controls.Custom;assembly=IntelliBox"
    x:Name="mainWin"
    Title="Usage examples for the Intellibox"
    Width="600" Height="300" Margin="6">
    <TabControl TabStripPlacement="Left">
        <TabItem Header="No Search Results"
                 ToolTip="Shows what happens when no search results are avalable.">
            <StackPanel>
                <TextBlock>//TODO place explanatory text here</TextBlock>
                <local:BasicSearchResultsCtrl Provider="{Binding ElementName=mainWin, Path=NoSearchResults}" />
            </StackPanel>
        </TabItem>

        <TabItem Header="Single Column List"
                 ToolTip="Demonstrates displaying a single-column list of simple Types.">
            <StackPanel>
                <TextBox Width="300" />
                <TextBlock>//TODO place explanatory text here</TextBlock>
                <local:BasicSearchResultsCtrl Provider="{Binding ElementName=mainWin, Path=SingleColumnResults}" />
            </StackPanel>
        </TabItem>

        <TabItem Header="Limiting result set"
                 ToolTip="Demonstrates how to limit the maximum number of results returned by a search.">

            <StackPanel>
                <TextBlock>//TODO place explanatory text here</TextBlock>
                <local:LimitedResultsCtrl Provider="{Binding ElementName=mainWin, Path=InvertSingleColumnResults}" />
            </StackPanel>
        </TabItem>

        <TabItem Header="Multi-Column List"
                 ToolTip="Demonstrates displaying a multi-column list of simple Types.">
            <StackPanel>
                <TextBlock>//TODO place explanatory text here</TextBlock>
                <TextBlock />

                <StackPanel Orientation="Horizontal">
                    <TextBlock>Selected Value:</TextBlock>
                    <TextBlock Text="{Binding ElementName=multiColumn, Path=SelectedValue}" />
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Selected Item:</TextBlock>
                    <TextBlock Text="{Binding ElementName=multiColumn, Path=SelectedItem}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock>Highlighted Item:</TextBlock>
                    <TextBlock Text="{Binding ElementName=multiColumn, Path=HighlightedItem}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Margin="0,0,6,0">Search:</TextBlock>
                    <auto:IntelliBox Width="200" Name="multiColumn"
                                     DisplayedValueBinding="{Binding FirstName}"
                                     SelectedValueBinding="{Binding PersonID}"
                        DataProvider="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=MultiColumnResults}">

                    </auto:IntelliBox>
                </StackPanel>
            </StackPanel>
        </TabItem>

        <TabItem Header="Overriding Columns"
                 ToolTip="Demonstrates how to override the header title and width of specific columns, while leaving the others untouched.">
            <StackPanel>
                <TextBlock>//TODO place explanatory text here</TextBlock>
                <TextBlock />

                <StackPanel Orientation="Horizontal">
                    <TextBlock>Selected Value:</TextBlock>
                    <TextBlock Text="{Binding ElementName=overrideColumn, Path=SelectedValue}" />
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Selected Item:</TextBlock>
                    <TextBlock Text="{Binding ElementName=overrideColumn, Path=SelectedItem}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock>Highlighted Item:</TextBlock>
                    <TextBlock Text="{Binding ElementName=overrideColumn, Path=HighlightedItem}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Margin="0,0,6,0">Search:</TextBlock>
                    <auto:IntelliBox Width="200" Name="overrideColumn"
                                              DisplayedValueBinding="{Binding FirstName}"
                                              SelectedValueBinding="{Binding PersonID}"
                        DataProvider="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=MultiColumnResults}">
                        <auto:IntelliBox.Columns>
                            <auto:DataColumn ForProperty="Age"
                                             Width="125"
                                             Header="Person's Age" />
                            <auto:DataColumn ForProperty="PersonID"
                                             Hide="True" />
                        </auto:IntelliBox.Columns>
                    </auto:IntelliBox>
                </StackPanel>

                <!-- -->
                <!-- this one shows how to explicitly specify columns when you're interested in not showing most of the columns -->
                <!-- -->

                <TextBlock />
                <TextBlock />
                <TextBlock>//TODO place explanatory text here</TextBlock>
                <TextBlock />

                <StackPanel Orientation="Horizontal">
                    <TextBlock>Selected Value:</TextBlock>
                    <TextBlock Text="{Binding ElementName=overrideAllColumn, Path=SelectedValue}" />
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Selected Item:</TextBlock>
                    <TextBlock Text="{Binding ElementName=overrideAllColumn, Path=SelectedItem}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock>Highlighted Item:</TextBlock>
                    <TextBlock Text="{Binding ElementName=overrideAllColumn, Path=HighlightedItem}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Margin="0,0,6,0">Search:</TextBlock>
                    <auto:IntelliBox Width="200" Name="overrideAllColumn"
                                              DisplayedValueBinding="{Binding FirstName}"
                                              SelectedValueBinding="{Binding PersonID}"
                                              ExplicitlyIncludeColumns="True"
                        DataProvider="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=MultiColumnResults}">
                        <auto:IntelliBox.Columns>
                            <auto:DataColumn DisplayMemberBinding="{Binding FirstName}" Width="150" Header="First Name" />
                            <auto:DataColumn DisplayMemberBinding="{Binding LastName}" Width="75" Header="Last Name" />
                        </auto:IntelliBox.Columns>
                    </auto:IntelliBox>
                </StackPanel>

            </StackPanel>
                
        </TabItem>

        <TabItem Header="Altering Column Position"
                 ToolTip="Demonstrates how to alter the natural position of the displayed columns.">

            <StackPanel>

                <TextBlock>//TODO place explanatory text here</TextBlock>
                <TextBlock />

                <StackPanel Orientation="Horizontal">
                    <TextBlock>Selected Value:</TextBlock>
                    <TextBlock Text="{Binding ElementName=positionColumn, Path=SelectedValue}" />
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock>Selected Item:</TextBlock>
                    <TextBlock Text="{Binding ElementName=positionColumn, Path=SelectedItem}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock>Highlighted Item:</TextBlock>
                    <TextBlock Text="{Binding ElementName=positionColumn, Path=HighlightedItem}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Margin="0,0,6,0">Search:</TextBlock>
                    <auto:IntelliBox Width="200" Name="positionColumn"
                                              DisplayedValueBinding="{Binding FirstName}"
                                              SelectedValueBinding="{Binding PersonID}"
                        DataProvider="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=MultiColumnResults}">
                        
                        <auto:IntelliBox.Columns>
                            <auto:DataColumn ForProperty="Age"
                                             Position="1" />
                            <auto:DataColumn ForProperty="Weight"
                                             Position="2" />
                            <auto:DataColumn ForProperty="NetWorth"
                                             Position="3" />
                        </auto:IntelliBox.Columns>
                    </auto:IntelliBox>
                </StackPanel>

            </StackPanel>

        </TabItem>
    </TabControl>
</Window>
