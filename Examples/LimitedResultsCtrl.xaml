<UserControl
    x:Class="Examples.LimitedResultsCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:auto="clr-namespace:System.Windows.Controls.Custom;assembly=IntelliBox">
    <StackPanel>
        <TextBlock />

        <StackPanel Orientation="Horizontal">
            <TextBlock>Selected Value:</TextBlock>
            <TextBlock Text="{Binding ElementName=autoBox, Path=SelectedValue}" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <TextBlock>Selected Item:</TextBlock>
            <TextBlock Text="{Binding ElementName=autoBox, Path=SelectedItem}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock>Highlighted Item:</TextBlock>
            <TextBlock Text="{Binding ElementName=autoBox, Path=HighlightedItem}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Margin="0,0,6,0">Search:</TextBlock>
            <auto:IntelliBox
                Width="200" Name="autoBox"
                DataProvider="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=Provider}"
                MaxResults="2"
            />
        </StackPanel>
    </StackPanel>
</UserControl>
